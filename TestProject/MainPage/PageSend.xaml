<Page x:Class="TestProject.MainPage.PageSend"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestProject.MainPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageSend">

    <Grid Background="White">
        <Button Name="Back" Width="100" Content="Назад" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20" Click="Back_Click"/>
        <StackPanel>
            <TextBox Name="Name" IsReadOnly="True" Width="400"/>
            <TextBox Name="Email" IsReadOnly="True" Width="400"/>
            <TextBox Name="Message" TextWrapping="Wrap" Height="117" IsReadOnly="True" Width="400" Margin="0 0 0 10"/>
            <Button Name="Create" Content="Создать ответ" Click="Create_Click" Width="300"/>
            <StackPanel Orientation="Horizontal" Margin="0 10 0 10" HorizontalAlignment="Center">
                <Button Content="Выбрать файл: " Click="Button_Click"/>
                <TextBox Name="Pyt" Width="167"/>
            </StackPanel>
            <Button Name="Sand" Content="Ответить" Click="Sand_Click" Width="300"/>
        </StackPanel>
    </Grid>
</Page>
